# LocalStack Deployment Configuration
# Copy this file to .env.localstack and modify as needed

export _USING_LOCALSTACK_CONFIG=true

# These AWS "credentials" are also hard-coded in localstack-provision.bash
# to guard against accidental deployment to a real AWS account
export AWS_ENDPOINT_URL='http://localhost:4566'
export AWS_ACCESS_KEY_ID="testing"
export AWS_SECRET_ACCESS_KEY="testing"
export AWS_SECURITY_TOKEN="testing"
export AWS_SESSION_TOKEN="testing"
export AWS_REGION='us-east-1'
export AWS_DEFAULT_REGION='us-east-1'

# CloudFormation Stack Names
export BOOTSTRAP_STACK="cirrus-bootstrap"
export MAIN_STACK="cirrus-sandbox"
export MINIMAL_WORKFLOW_STACK="cirrus-sandbox-minimal-workflow"

# Deployment Parameters
export RESOURCE_PREFIX="cirrus-sandbox"
export LAMBDA_PYTHON_VERSION="3.13"
export LAMBDA_ARCH="arm64"
export LOG_LEVEL="DEBUG"
